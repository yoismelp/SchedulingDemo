<h2 class="alert-info">Reservation Look Up</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Facility, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedFacility, new SelectList(listItems, "Value", "Text"), new { @name = "Facility" })
                @Html.ValidationMessageFor(model => model.SelectedFacility, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedGroupTopic, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedGroupTopic, new SelectList(Model.GroupTopics, "Value", "Text"), new { @name = "GroupTopic" })
                @Html.ValidationMessageFor(model => model.SelectedGroupTopic, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.GroupDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GroupDate, new { htmlAttributes = new { @class = "form-control datepicker", placeholder = "Ex. " + ViewBag.CurrentDate, id = "GroupDate" } })
                @Html.ValidationMessageFor(model => model.GroupDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedLOC, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedLOC, new SelectList(LOCList, "Value", "Text"), new { @name = "LOC" })
                @Html.ValidationMessageFor(model => model.SelectedLOC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Show Results" class="btn btn-success" id="btn" />
            </div>
        </div>
    </div>

    <div class="Processing" style="display: none; width:20px; height: 20px">
        <img src="~/Content/Processing.gif" />
    </div>
}

